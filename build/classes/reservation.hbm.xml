<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
		  "-//Hibernat/Hibernat Mapping DTD 3.0//EN"
		  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
		  
<hibernate-mapping package="modele">
<class name="reservation" table="reservation">

	<id name="idR" column="idR" type="integer">
	<generator class="native" />
	</id>

	<property name="dateR" column="dateR" type="date"></property>
	<property name="montantPayeR" column="montantPayeR" type="double"></property>
	<property name="idUser" column="idUser" type="integer"></property>
	<property name="codeVoyR" column="codeVoyR" type="integer"></property>
	<property name="codeVTR" column="codeVTR" type="integer"></property>
	<property name="idActR" column="idActR" type="integer"></property>
	
</class>


</hibernate-mapping>

		  